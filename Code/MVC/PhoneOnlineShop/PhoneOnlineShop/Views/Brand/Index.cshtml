@model IEnumerable<PhoneOnlineShop.Models.Brand>
@{
    ViewBag.Title = "Index";
}

<h2>Available Brands</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Brand Name</th>
            <th>Country Of Origin</th>
        </tr>
    </thead>
    @if (!Model.Any())
    {
        <p>There are no brands available.</p>
    }
    else
    {
        <tbody>
            @foreach (var brand in Model)
            {
            <tr>
                <td>@Html.ActionLink(@brand.BrandName, "AvailablePhones", "Brand", new { id = brand.ID }, null)</td>

                <td>@brand.CountryOfOrigin</td>
            </tr>
            }
        </tbody>
    }
</table>

