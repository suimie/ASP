@model SurveyOnline.ViewModels.SurveyFormViewModel

@{
    ViewBag.Title = "SurveyForm";
}

<h2>SurveyForm</h2>

@using (Html.BeginForm("Save", "Survey"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SurveyFormViewModel</h4>
        <hr />
        @Html.HiddenFor(m => m.Survey.Id)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Survey.Title)
            @Html.TextBoxFor(m => m.Survey.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Survey.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Survey.SurveyQuestion)
            @Html.TextBoxFor(m => m.Survey.SurveyQuestion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Survey.SurveyQuestion)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Survey.TopicId)
            @Html.DropDownListFor(m => m.Survey.TopicId, new SelectList(Model.Topics, "Id", "Name"), "Please select a membership", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Survey.TopicId)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Survey.Author)
            @Html.TextBoxFor(m => m.Survey.Author, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Survey.Author)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Survey.DeadlineDate)
            @Html.TextBoxFor(m => m.Survey.DeadlineDate, "{0:d MMM yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Survey.DeadlineDate)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
