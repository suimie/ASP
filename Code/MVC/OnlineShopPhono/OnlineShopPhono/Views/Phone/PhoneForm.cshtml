@model OnlineShopPhono.ViewModel.PhoneFormViewModel
@{
    ViewBag.Title = "PhoneForm";
}

@if (Model.Phone.ID == 0)
{
    <h2>New Phone</h2>
}
else
{
    <h2>Update Phone</h2>
}

@using (Html.BeginForm("Save", "Phone"))
{
    @Html.ValidationSummary(true, "Please fix the form")
    <div>
        @Html.LabelFor(m => m.Phone.PhoneName)
        @Html.TextBoxFor(m => m.Phone.PhoneName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Phone.PhoneName)
    </div>

    <div>
        @Html.LabelFor(m => m.Phone.BrandId)
        @Html.DropDownListFor(m => m.Phone.BrandId,
                                new SelectList(Model.Brands, "ID", "BrandName"),
                                "Please select a media type",
                                new { @class = "form-control" })

    </div>
    <div>
        @Html.LabelFor(m => m.Phone.DateRelease)
        @Html.TextBoxFor(m => m.Phone.DateRelease, "{0:yyyy-MM-dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Phone.DateRelease)
    </div>
    <div>
        @Html.LabelFor(m => m.Phone.ScreenSize)
        @Html.TextBoxFor(m => m.Phone.ScreenSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Phone.ScreenSize)
    </div>
    <div>
        @Html.LabelFor(m => m.Phone.PhoneTypeId)
        @Html.DropDownListFor(m => m.Phone.PhoneTypeId,
                                new SelectList(Model.PhoneTypes, "ID", "Name"),
                                "Please select a phone type",
                                new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Phone.ID)
    <br />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
