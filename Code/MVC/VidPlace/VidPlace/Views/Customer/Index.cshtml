@model IEnumerable<VidPlace.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is comment Block
*@


<h2>Customers List</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer's Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    @if (!Model.Any())
    {
        <p>There are no customers available.</p>
    }
    else { 
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(@customer.Name, "Edit", "Customer", new { id = customer.ID }, null)</td>
                <td>@customer.Membership.Name</td>
                <td>@customer.Membership.DiscountRate%</td>
            </tr>
        }
    </tbody>
    }
</table>


